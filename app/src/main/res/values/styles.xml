<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--起始页-->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 窗口设置 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>

        <!-- 默认文本颜色 -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 录制状态文本样式 -->
    <style name="RecordingText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 按钮通用样式 -->
    <style name="ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- 分区标题文本样式 -->
    <style name="SectionTitle">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <!-- 标签文本样式 -->
    <style name="LabelText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:alpha">0.87</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- 数值文本样式 -->
    <style name="ValueText">
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- 卡片容器样式 -->
    <style name="CardContainer">
        <item name="android:background">#80000000</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <!-- 录制指示器样式 -->
    <style name="RecordingIndicator">
        <item name="android:background">#80000000</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <!-- 底部按钮容器样式 -->
    <style name="ButtonContainer">
        <item name="android:background">#80000000</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 健康数据标签样式 -->
    <style name="HealthDataLabel" parent="LabelText">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 健康数据值样式 -->
    <style name="HealthDataValue" parent="ValueText">
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:gravity">start</item>
    </style>
</resources>